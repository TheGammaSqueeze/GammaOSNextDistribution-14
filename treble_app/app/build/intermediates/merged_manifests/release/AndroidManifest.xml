<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.phh.treble.app"
    android:persistent="true"
    android:sharedUserId="android.uid.system"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="27"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" />
    <uses-permission android:name="android.permission.DIAGNOSTIC" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_settings"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library
            android:name="android.hidl.manager.V1_0"
            android:required="false" />
        <uses-library
            android:name="vendor.huawei.hardware.biometrics.fingerprint.V2_1"
            android:required="false" />
        <uses-library
            android:name="vendor.huawei.hardware.tp.V1_0"
            android:required="false" />
        <uses-library
            android:name="vendor.qti.hardware.radio.am.V1_0"
            android:required="false" />
        <uses-library
            android:name="vendor.qti.qcril.am.V1_0"
            android:required="false" />

        <service android:name="me.phh.treble.app.EntryService" />
        <service android:name="me.phh.treble.app.NubiaAutoFanControlService" />
        <service
            android:name="me.phh.treble.app.NubiaGameModeTilesService"
            android:enabled="false"
            android:exported="true"
            android:icon="@drawable/tile_game_mode"
            android:label="Game Mode"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE" >
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="true" />

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="me.phh.treble.app.NubiaFanControlTilesService"
            android:enabled="false"
            android:exported="true"
            android:icon="@drawable/tile_fan_control"
            android:label="Fan Control"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE" >
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="true" />

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="me.phh.treble.app.NubiaShoulderBtnTilesService"
            android:enabled="false"
            android:exported="true"
            android:icon="@drawable/tile_game_mode"
            android:label="Shoulder triggers"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE" >
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="true" />

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <receiver
            android:name="me.phh.treble.app.Starter"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="me.phh.update" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="me.phh.treble.app.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.TrebleApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name="me.phh.treble.app.TopLevelSettingsActivity"
            android:enabled="true"
            android:exported="true"
            android:targetActivity="me.phh.treble.app.SettingsActivity" >
            <intent-filter>
                <action android:name="com.android.settings.action.IA_SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="com.android.settings.category"
                android:value="com.android.settings.category.ia.homepage" />
            <meta-data
                android:name="com.android.settings.summary"
                android:resource="@string/desc_activity_top_level" />
            <meta-data
                android:name="com.android.settings.title"
                android:resource="@string/title_activity_top_level" />
            <meta-data
                android:name="com.android.settings.icon"
                android:resource="@drawable/ic_settings" />
            <meta-data
                android:name="com.android.settings.order"
                android:value="-190" />
        </activity-alias>

        <activity
            android:name="me.phh.treble.app.UpdaterActivity"
            android:exported="true"
            android:label="@string/title_activity_updater"
            android:launchMode="singleTop"
            android:theme="@style/Theme.TrebleApp" >
            <intent-filter android:priority="1" >
                <action android:name="android.settings.SYSTEM_UPDATE_SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="me.phh.treble.app.REPL"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS" />

        <activity
            android:name="me.phh.treble.app.DesktopInput"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Material.Dialog" >
        </activity>
        <activity android:name="me.phh.treble.app.DebugSensors" />

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />
    </application>

</manifest>